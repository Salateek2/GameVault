<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Game cover image -->
        <ImageView
            android:id="@+id/imageGameCover"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            />

        <!-- Game title -->
        <TextView
            android:id="@+id/textGameTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game Title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp" />

                   <!-- screenshots -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerScreenshots"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            android:overScrollMode="never"
            android:clipToPadding="false"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            />

        <!-- Genres -->
        <TextView
            android:id="@+id/textGenres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genres: Action, Adventure"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="4dp" />

        <!-- Release date -->
        <TextView
            android:id="@+id/textReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Released: 2025-01-01"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="2dp" />

        <!-- Platforms -->
        <TextView
            android:id="@+id/textPlatforms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Platforms: PC, PlayStation, Xbox"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="4dp" />


        <!-- Rating -->
        <TextView
            android:id="@+id/textRating"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rating: 4.5"
            android:textSize="14sp"
            android:textColor="#666"
            android:layout_marginTop="2dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Game description goes here..."
            android:textSize="16sp"
            android:layout_marginTop="12dp" />

        <!-- Save to favorites button -->
        <Button
            android:id="@+id/buttonSaveGame"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save to My Library"
            android:layout_marginTop="20dp" />

    </LinearLayout>
</ScrollView>
